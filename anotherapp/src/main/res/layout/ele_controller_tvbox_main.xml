<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white">

    <LinearLayout
        android:id="@+id/aa"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="50%"
        android:orientation="vertical"

        >

        <LinearLayout
            android:id="@+id/top_menu_list"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="1.2"
            android:background="@color/line_gray"
            android:paddingBottom="2px">

            <LinearLayout
                android:id="@+id/tvbox_power"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <com.zjianhao.view.IconFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#xe6c7;"
                    android:textSize="25sp"
                    android:textColor="@color/red_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电源"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tvbox_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@color/white"
                android:layout_marginRight="1px"
                android:layout_marginLeft="1px"
                android:gravity="center"
                android:orientation="vertical">

                <com.zjianhao.view.IconFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#xe646;"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="菜单"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/txbox_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="1px">

                <com.zjianhao.view.IconFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#xe612;"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返回"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/channel_add"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:background="@drawable/top_circle_oval_button" />

                    <com.zjianhao.view.IconFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#xe602;"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:layout_gravity="center"
                        android:translationZ="10dp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="70dp"
                    android:layout_height="40dp">

                    <View
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="频道"
                        android:background="@color/line_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="频道" />


                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/channel_sub"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bottom_circle_oval_button" />

                    <com.zjianhao.view.IconFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#xe635;"
                        android:textSize="25sp"
                        android:layout_gravity="center"
                        android:translationZ="10dp"
                        android:textColor="@color/black" />
                </FrameLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"

                >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp">

                    <Button
                        android:id="@+id/sound_add"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:background="@drawable/top_circle_oval_button" />

                    <com.zjianhao.view.IconFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#xe602;"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:layout_gravity="center"
                        android:translationZ="10dp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="70dp"
                    android:layout_height="40dp">

                    <View
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="频道"
                        android:background="@color/line_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="声音" />

                </FrameLayout>

                <FrameLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/sound_sub"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bottom_circle_oval_button" />

                    <com.zjianhao.view.IconFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#xe635;"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:layout_gravity="center"
                        android:translationZ="10dp" />

                </FrameLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="150dp"
                android:layout_height="150dp">


                <Button
                    android:id="@+id/tvbox_up"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/pc_up"
                    android:layout_marginTop="2dp"

                    />

                <Button
                    android:id="@+id/tvbox_ok"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:text="ok"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/pc_enter" />

                <Button
                    android:id="@+id/tvbox_left"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/pc_left"
                    android:layout_marginLeft="2dp" />

                <Button
                    android:id="@+id/tvbox_right"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/pc_right"
                    android:layout_marginRight="2dp" />

                <Button
                    android:id="@+id/tvbox_down"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/pc_down"
                    android:layout_marginBottom="2dp" />


            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>

    <android.support.percent.PercentRelativeLayout

        android:layout_width="match_parent"
        app:layout_heightPercent="50%"
        android:layout_below="@+id/aa"
        android:layout_marginBottom="10dp">


        <LinearLayout
            android:id="@+id/num_aa"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_heightPercent="25%"
            android:weightSum="1.2"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center">

                <Button
                    android:id="@+id/num_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/number_circle_button"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center">

                <Button
                    android:id="@+id/num_2"
                    android:layout_width="@dimen/num_button_size"
                    android:layout_height="@dimen/num_button_size"
                    android:background="@drawable/number_circle_button"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center">

                <Button
                    android:id="@+id/num_3"
                    android:layout_width="@dimen/num_button_size"
                    android:layout_height="@dimen/num_button_size"
                    android:background="@drawable/number_circle_button"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/num_bb"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_heightPercent="25%"
            android:weightSum="1.2"
            android:layout_below="@id/num_aa"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center">

                <Button
                    android:id="@+id/num_4"
                    android:layout_width="@dimen/num_button_size"
                    android:layout_height="@dimen/num_button_size"
                    android:background="@drawable/number_circle_button"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center">

                <Button
                    android:id="@+id/num_5"
                    android:layout_width="@dimen/num_button_size"
                    android:layout_height="@dimen/num_button_size"
                    android:background="@drawable/number_circle_button"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center">

                <Button
                    android:id="@+id/num_6"
                    android:layout_width="@dimen/num_button_size"
                    android:layout_height="@dimen/num_button_size"
                    android:background="@drawable/number_circle_button"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/num_cc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_heightPercent="25%"
            android:weightSum="1.2"
            android:layout_below="@id/num_bb"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center">

                <Button
                    android:id="@+id/num_7"
                    android:layout_width="@dimen/num_button_size"
                    android:layout_height="@dimen/num_button_size"
                    android:background="@drawable/number_circle_button"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center">

                <Button
                    android:id="@+id/num_8"
                    android:layout_width="@dimen/num_button_size"
                    android:layout_height="@dimen/num_button_size"
                    android:background="@drawable/number_circle_button"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center">

                <Button
                    android:id="@+id/num_9"
                    android:layout_width="@dimen/num_button_size"
                    android:layout_height="@dimen/num_button_size"
                    android:background="@drawable/number_circle_button"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/num_dd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_heightPercent="25%"
            android:weightSum="1.2"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/num_cc">

            <Button
                android:id="@+id/num_0"
                android:layout_width="@dimen/num_button_size"
                android:layout_height="@dimen/num_button_size"
                android:background="@drawable/number_circle_button"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>


    </android.support.percent.PercentRelativeLayout>


</android.support.percent.PercentRelativeLayout>