<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@null"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/boder_linearlayout"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="频道换台"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <include layout="@layout/view_line"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_chanel1"
                    android:background="@drawable/chanel1"
                    android:layout_height="60dp"
                    android:layout_width="60dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_chanel2"
                    android:background="@drawable/chanel2"
                    android:layout_height="60dp"
                    android:layout_width="60dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_chanel3"
                    android:background="@drawable/chanel3"
                    android:layout_height="60dp"
                    android:layout_width="60dp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"

            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_chanel4"
                    android:background="@drawable/chanel4"
                    android:layout_height="60dp"
                    android:layout_width="60dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_chanel5"
                    android:background="@drawable/chanel5"
                    android:layout_height="60dp"
                    android:layout_width="60dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_chanel6"
                    android:background="@drawable/chanel6"
                    android:layout_height="60dp"
                    android:layout_width="60dp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_chanel7"
                    android:background="@drawable/chanel7"
                    android:layout_height="60dp"
                    android:layout_width="60dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_chanel8"
                    android:background="@drawable/chanel8"
                    android:layout_height="60dp"
                    android:layout_width="60dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_chanel9"
                    android:background="@drawable/chanel9"
                    android:layout_height="60dp"
                    android:layout_width="60dp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_chanel_input"
                    android:background="@drawable/channel_input"
                    android:layout_height="60dp"
                    android:layout_width="60dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_chanel0"
                    android:background="@drawable/chanel0"
                    android:layout_height="60dp"
                    android:layout_width="60dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_return"
                    android:background="@drawable/reminisce"
                    android:layout_height="60dp"
                    android:layout_width="60dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>